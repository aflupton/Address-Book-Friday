@{
  Layout = "_Layout";
}

<div class="container">
  <!-- <h1>Address Book</h1> -->
  <h3><em>View existing addresses, create new entries, and delete old entries</em></h3>
    <br>
    <div class="addressBook">


        @if (@Model.Count == 0)
        {
          <p>No contacts have been added. Submit contacts entries to see the list.</p>
        }
        @foreach(var contact in Model)
        {
          <h4><strong>Contact #: @contact.GetId()</strong></h4>
          <p><a href="/Contacts/@contact.GetId()">@contact.GetName()</a></p>
          <p>@Html.ActionLink("Delete", "Delete", new { id=@car.GetId() })
          </p>
        }

    </div>
    <!-- end of address book div -->

  <!-- <p><a href="/Contacts/Delete">Delete all contacts</a></p> -->

  <!-- routing button -->
  <form action="/Contacts/Create" method="get">
    <button type="submit" name="button">Create a new entry</button>
  </form>

</div>
<!-- end of container -->
